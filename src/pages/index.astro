---
import '../styles/main.css'
import Navigation from "../components/Navigation.astro";

const heading = "Patify";
const subheading = "A social platform where pet owners can post listings, share posts, chat, and ask questions.";
const appIcon = "/images/app_icon.png";
const appScreenshot = "/images/app-screenshot.png";
const footerImage = "/images/banners.svg";
const badges = [
    {
        link: "https://apps.apple.com/tr/app/patify/id6478046323",
        image: "/images/app-store-badge.svg"
    },
    {
        link: "https://play.google.com/store/apps/details?id=com.bcc.buschat&hl=tr",
        image: "/images/google-play-badge.png"
    },
];
const authors = [
    {
        name: "CC",
        url: "mailto:b.cihancengiz@gmail.com"
    },
];
const pageTitle = "Patify";
const favicon = "/images/favicon.svg"
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href={favicon}/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{pageTitle}</title>
</head>
<body>
<div class="container">
    <header>
        <nav>
            <Navigation />
        </nav>
    </header>
    <main>
        <div class="text-container">
            <img src={appIcon} class="app-icon">
            <h1 class="heading">{heading}</h1>
            <h2 class="subheading">{subheading}</h2>
            <div class="badge-container">
                {badges.map(badge => (
                        <div>
                            <a href={badge.link} target="_blank">
                                <img src={badge.image} class="badge"/>
                            </a>
                        </div>
                ))}
            </div>
            <p class="authors">Made with &#x2665; by
                {authors.map((author, index) => (
                        <span>
									{index > 0 ? (index === authors.length - 1 ? ' and ' : ', ') : ''}
                            <a href={author.url} target="_blank">{author.name}</a>
								</span>
                ))}
            </p>
        </div>
        <div>
            <img src={appScreenshot} class="app-screenshot">
        </div>
    </main>
    <!--<footer>-->
    <!--	<img src={footerImage} class="footer-image">-->
    <!--</footer>-->
</div>
</body>
</html>